<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DrugiFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/image_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ImageView>

    <TextView
        android:id="@+id/text_detail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@id/image_detail_fragment"></TextView>

    <TextView
        android:id="@+id/description_detail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@id/text_detail_fragment"></TextView>

</RelativeLayout>

</FrameLayout>